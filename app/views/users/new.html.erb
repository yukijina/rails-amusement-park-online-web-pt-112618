<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <%= f.label :height %> (in inches)<br>
    <%= f.number_field :height %>
  </div>

  <div class="form-group">
    <%= f.label :happiness ,"How happy are you? (1-5 scale)" %><br>
    <%= f.number_field :happiness %>
  </div>

  <div class="form-group">
    <%= f.label :nausea, "How nauseous are you? (1-5 scale)" %><br>
    <%= f.number_field :nausea %>
  </div>

  <div class="form-group">
  <%= f.label :tickets, "How many dollars are you in your poket?" %><br>
  <%= f.number_field :tickets %>
  </div>

  <div class="form-group">
    <%= f.label :admin, "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %>
